{
  "compilerOptions": {
    "sourceMap": false,
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "lib": ["esnext", "dom"],
    "types": ["node"],
    "rootDirs": ["./src"],
    "outDir": "dist"
  },
  "include": ["src/**/*", "global.d.ts"],
  "exclude": ["node_modules"]
}
